IP TABLES

iptables -A OUTPUT -p tcp --dport 60782 -j ACCEPT
iptables -A INPUT -p tcp --dport 60782 -j ACCEPT
[root@vltilla2-eth0 ~]# /etc/init.d/iptables restart
